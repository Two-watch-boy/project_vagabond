<div class="loginPage">

  <h1 class="loginText">Login</h1>

  <%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <div>
    <%= f.text_field :email, placeholder: "Email", class: "login form-control" %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "Password" , class: "login form-control"%>
  </div>
  <%= f.submit "Sign In", class:"loginText btn btn-primary" %>
  <% end %>

</div>
