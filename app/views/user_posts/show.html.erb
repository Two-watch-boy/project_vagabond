<%= @post.city.name %>

<div class="row">
  <div class="col-sm-9 col-sm-push-3">
    <h1> <%=@post.title %> </h1>
    <p> <%=@post.created_at%></small> </p>
    <p> <%=@post.content %> </p>
      <%= link_to "Edit", edit_city_post_path(@post.city.name, @post), method: :get %>
      <%= link_to "Delete", delete_city_post_path(@post.city, @post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}  %>
  </div>


  <div class="col-sm-3 col-sm-pull-9">
    <img src="<%=@post.user.photo %>", class="img-responsive" />
    <p> <%= link_to @post.user.first_name, user_path(@post.user) %> </p>
    <p> <%= "Member for " + ((Time.now.to_i - @post.user.created_at.to_i)/3600000).floor.to_s + " days" %> </p>
    <p> <%=@post.user.location %> </p>
  </div>
</div>
