
<%= ENV["secret_test"] %>

<div id="map-container">
  <div id="map"></div>
</div>
<script>
var map;
function initMap() {
  console.log("In INit map");
  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 20, lng: 0},
    zoom: 2
  });

  <% @city.each do |city| %>
  var marker = new google.maps.Marker({
    url: "<%= city_path(city) %>",
    position: {lat: <%= city.lat %>, lng: <%= city.lon %>},
    title: "<%= city.name %>",
    label: "<%= city.name %>",
    map: map
    });
  google.maps.event.addListener(marker, 'click', function() {
    window.location.href = this.url;
  });
  <% end %>
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['secret_google_key']%>&callback=initMap"
async defer></script></div>

<% if is_premium? %>
<%= link_to "Add a City", new_city_path %>
<% end %>

<div class="citiesList">
  <% @city.each do |t|%>
  <div class="city">
    <%= image_tag (t.photo), class: "cityPic"%>
    <p class="name"><%=link_to "#{t.name}", city_path(t)%></br><small><%= t.lat%><%= t.lon%></small></p>

  </div>
  <%end%>
