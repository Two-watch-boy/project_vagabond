<% content_for :css do %>
  .cityProfile{
    background-image: url("<%=@city.photo%>");
  }
<% end %>

<style>
  <%=  yield :css %>

</style>
<div class="cityProfile">

    <div>
      <h1 class="welcome">Welcome to <%= @city.name%>,</h1>
      <!-- <%= image_tag (@city.photo), class: "cityProfilePic"%> -->
      <p class="name"><%= @city.name%></br> lat: <%=@city.lat%></br> lon: <%=@city.lon%>

    </div>
</div>
<div class="posts">
  <% @posts.each do |post| %>
  <div class="city">
    <p class="postData"><%= link_to post.title, city_post_path(@city, post) %></br><small><%=post.content%><%= post.created_at%></small></p>

  </div>
  <%end%>
</div>
