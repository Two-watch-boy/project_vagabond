<div class="container">
  <h1 class="makeCommentText"> Post a comment </h1>

  <%= form_for @comment, url: create_comment_path(@post) do |f| %>

  <div>
    <%= f.text_area :content, {placeholder: "Comments", class: "form-control makeComment input"} %>
  </div>

  <%= f.submit class: "btn btn-success makeCommentText"%>
  <% end %>

</div>
