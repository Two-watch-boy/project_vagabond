<h1 class="commentInputText"> Post a comment </h1>

<div class="container">
  <%= form_for @comment, url: create_comment_path(@post) do |f| %>

  <div>
    <%= f.text_area :content, {placeholder: "Comments", class: "form-control commentInput"} %>
  </div>

  <%= f.submit class: "btn btn-success commentInputButton"%>
  <% end %>

</div>
